{
  "name": "kvuploader",
  "description": "",
  "author": "ɛʟʟɨօȶ b  =^._.^= ∫ <elliot@email.gd>",
  "license": "The Unlicense",
  "main": "index.js",
  "bin": {
    "kvuploader": "./index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "dependencies": {
    "chalk": "^5.3.0",
    "fdir": "^6.1.1",
    "mime-types": "^2.1.35",
    "minimatch": "^9.0.4",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^1.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^51.0.1",
    "prettier": "^3.2.5"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "semi": false,
    "experimentalTernaries": true,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "singleAttributePerLine": false,
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "proseWrap": "preserve",
    "insertPragma": false,
    "printWidth": 80,
    "requirePragma": false,
    "tabWidth": 2,
    "useTabs": false,
    "embeddedLanguageFormatting": "auto"
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "prettier",
      "@stylistic/js",
      "unicorn",
      "simple-import-sort"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:unicorn/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "es2024": true
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }
}
